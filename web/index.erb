<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/controllers/index.css" rel="stylesheet" />
    <%= javascript_importmap_tags %>
    <script type="module">
      import { start } from "controllers/index"

      document.addEventListener("DOMContentLoaded", () => {
        start()
      })
    </script>
  </head>
  <body>
    <main>
      <aside class="sidebar">
        <header class="sidebar-header">
          <a href="#" class="sidebar-check-reset" data-action="definitionCheckReset">
            Reset
          </a>
          <input type="text" data-action="definition-filter-input" placeholder="Filter definition" />
        </header>

        <ul>
          <% each_definition(store) do |definition| %>
            <li class="definition-indent-<%= definition.level %>" data-target="definition-li" data-title="<%= definition.title[0..200].tr(%(\n '"), '') %>">
              <label>
                <input data-target="definition-checkbox" data-id="<%= definition.id %>" type="checkbox" />
                <%= definition.title[0..200].tr(%(\n '"), '') %>
              </label>
            </li>
          <% end %>
        </ul>
      </aside>
      <article class="content">
        <header class="content-header">
          <h1 data-target="definition-title"></h1>
          <h4 data-target="definition-id"></h4>
        </header>
        <div data-target="definition-graph-wrapper">
          <div data-target="definition-graph"></div>
        </div>
      </article>
      <aside class="aside-content">
        <div class="aside-content-sources">
          <header>
            <h2>Sources</h1>
          </header>

          <ul data-target="definition-sources" />
        </div>
      </aside>
    </main>
  </body>
</html>
